algoritmo "CONTAGEMVALORSALTO"
var
   CONTADOR, VALOR, SALTO: INTEIRO
inicio
   CONTADOR <- 0
   ESCREVA ("QUER CONTAR ATÉ QUANTO? ")
   LEIA (VALOR)
   ESCREVA ("QUAL O VALOR DO SALTO? ")
   LEIA (SALTO)
   ENQUANTO (CONTADOR <= VALOR) FAÇA
            ESCREVAL (CONTADOR)
            CONTADOR <- CONTADOR + SALTO
   FIMENQUANTO
   ESCREVAL ("CONTAGEM FINALIZADA")
fimalgoritmo